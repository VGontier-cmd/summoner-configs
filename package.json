{
  "name": "summoners-config",
  "version": "0.0.2",
  "main": "dist-electron/main/index.js",
  "description": "Electron Vite React application",
  "author": "VGontier-cmd, TCarel-dev",
  "license": "MIT",
  "private": true,
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:7777/"
    }
  },
  "scripts": {
    "dev": "pnpm i && vite",
    "build": "pnpm i && tsc && vite build",
    "run-build": "electron dist-electron/main/index.js",
    "package": "pnpm i && electron-builder",
    "publish": "pnpm i && electron-builder -p always",
    "preview": "pnpm i && vite preview",
    "pree2e": "pnpm i && vite build --mode=test"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.4",
    "@radix-ui/react-tooltip": "^1.0.6",
    "cal-sans": "^1.0.1",
    "child_process": "^1.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "class-variance-authority": "^0.6.0",
    "clsx": "^1.2.1",
    "dotenv": "^16.1.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "fs-extra": "^11.1.1",
    "lucide-react": "^0.230.0",
    "tailwind-merge": "^1.12.0",
    "tailwindcss-animate": "^1.0.5",
    "uuid": "^9.0.0",
    "vite-plugin-svgr": "^3.2.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.7",
    "@types/react-dom": "^18.2.4",
    "@types/uuid": "^9.0.1",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.14",
    "electron": "^23.3.4",
    "electron-builder": "^23.6.0",
    "postcss": "^8.4.24",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.62.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4",
    "vite": "^4.3.9",
    "vite-plugin-electron": "^0.11.2",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "build": {
    "appId": "com.electron.summoners-config",
    "productName": "Summoners Config",
    "artifactName": "${productName}.${ext}",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist-electron",
      "dist"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "VGontier-cmd",
        "repo": "summoner-configs"
      }
    ]
  }
}
